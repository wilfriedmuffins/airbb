<h1>Reset password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]), local: true do |form| %>

    <%= render partial: "shared/flash_errors", locals: { obj: form.object } %>


    <%= form.label :password %>
    <%= form.password_field :password, class:"form-controle" %>

    <!--#form.password_field affiche des rond noir-->
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-controle" %>

    <%= form.submit "Reset password" %>

<% end %>