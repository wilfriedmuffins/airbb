<h1>Nouveau logements</h1>

<%= form_with model: @logement, url: new_logement_path, local: true do|form| %>

    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :adresse %>
    <%= form.text_field :adresse %>
    
    <%= form.label :start_date_of_availability %>
    <%= form.date_select :start_date_of_availability %>

    <%= form.label :end_date_of_availability %>
    <%= form.date_select  :end_date_of_availability %>

    <%= form.label :voyageur %>
    <%= form.number_field :voyageur , in: 1...20, step: 1  %>

    <%= form.submit "Ajouter logement" %>
<% end %>
