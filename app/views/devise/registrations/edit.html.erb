<div class="container">
    
  <h1 class="container p-5"><%= t('.title', resource: resource.model_name.human) %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row mb-3">
        <label class="col-sm-2 col-form-label"><%= f.label :avatar %></label>
        <div class="col-sm-3">
          <% if @user.avatar.present? %>
              <%= image_tag @user.avatar.url, class:"d-block w-100" %> 
          <%else %>
              <%= image_tag @user.avatar.url, class:"d-block w-100" %> 
          <% end %> 
          <%= f.file_field :avatar, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-2 col-form-label"><%= f.label :name %></label>
        <div class="col-sm-3">
            <%= f.text_field :name, class: "form-control"%>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-2 col-form-label"><%= f.label :email %><br /></label>
        <div class="col-sm-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
    <% end %>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label"><%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br /></label>
      <div class="col-sm-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label"><%= f.label :password_confirmation %><br /></label>
      <div class="col-sm-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label"><%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br /></label>
      <div class="col-sm-3">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit t('.update'), class: "btn btn-primary" %>
    </div>
  <% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to t('devise.shared.links.back'), :back %>
 </div>