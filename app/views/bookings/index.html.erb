
<div class="container">
    <h1 class="container-fluid text-center">Reservations</h1>
</div>

<%# <%= link_to "nouveau reservation", new_logement_path %> 
<div class="container">
<table class="table table-hover" >
    <thead>
        <tr>    
            <th scope="col" >Id reservation</th>
            <th scope="col" >User de la reservation</th>
            <th scope="col" >Id Logement</th>
            <th scope="col" >Date de début de reservation</th>
            <th scope="col" >Date de fin de reservation</th>
            <th scope="col" >Date de création</th>
            <th scope="col" >Prix Total</th>
            <th scope="col" >Status</th>
        </tr>
    </thead>
    <tbody>
        <% @bookings.each do |reservation| %>
            <tr>
                <td><%= reservation.id %>  </td>
                <td><%= reservation.user_id %> : <%= reservation.user.name %>  </td>
                <td><%= reservation.logement_id %>  </td>
                <td><%= reservation.start_booking.try(:strftime, ("%e %B %Y")) %></td> 
                <td><%= reservation.end_booking.try(:strftime, ("%e %B %Y")) %></td>
                <td><%= reservation.created_at.try(:strftime, ("%e %B %Y")) %></td>
                <td><%= reservation.t_price %></td>
                <td>
                    <div class="row">
                        <div class="col-1"><%= render "svg/"+ check_status(reservation.id) %></div>
                        <div class="col-1"><%= check_status(reservation.id)%></div>
                    </div>
                </td>
                <td><button type="button" class="btn btn-primary"><%= link_to "show", booking_path(reservation), class: "link-light", style: "text-decoration:none" %></button></td>
            </tr>
        <% end %>
    </tbody>
</table> 
</div>
