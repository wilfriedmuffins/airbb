
<div class="container-fluid">

  <div class="carousel slide carousel-fade " id="carouselExampleFade" data-bs-ride="carousel">

    <div class="carousel-inner">

      <div class="carousel-item active" data-bs-interval="5900">
      <%= video_tag ["production_id_3783242.mp4"], :size => "3840 x 2160", class:"d-block w-100", autoplay: :autoplay, loop: :loop, muted: :muted %>
        <div class=" carousel-caption">
          <h1 class="title"> Envie d'évasion?</h1>
        </div>
      </div>
      
      <div class="carousel-item" data-bs-interval="5010" >
        <%= video_tag ["video.mp4"], :size => "3840 x 2160", class:"d-block w-100", autoplay: :autoplay, loop: :loop, muted: :muted %>
        <div class=" carousel-caption">
          <h1 class="title">Dans une destination de rêve?</h1>
        </div>    
      </div>

      <div class="carousel-item" data-bs-interval="5010">
        <%= video_tag ["tropical.mp4"], :size => "3840 x 2160", class:"d-block w-100 cover", autoplay: :autoplay, loop: :loop, muted: :muted %>
        <div class=" carousel-caption">
          <h1 class="title">Dans une destination de rêve?</h1>
        </div>
      </div>

      <div class="carousel-item" data-bs-interval="6010">
        <%= video_tag ["pexels_videos_2252797.mp4"], :size => "3840 x 2160", class:"d-block w-100 ", autoplay: :autoplay, loop: :loop, muted: :muted %>
        <div class=" carousel-caption">
          <h1 class="title">Alors envole toi par ici!</h1>
        </div>
      </div>

      <div class="relative">
        <div class="search position-absolute bottom-0 start-50 translate-middle-x bg-light m-1 p-2 rounded">

          <%= form_with url: "/search", method: :get, data: { controller:"places" }, local: true do |form|%>
          <div class="d-flex flex-column flex-md-row">

            <div><%= form.text_field :city, placeholder:"Ville", class:" form-control p-1", data: { places_target: "city"} %></div> 

            <div class="vr d-none d-md-block m-1"></div>
            <div class="dropdown-divider d-block d-md-none m-1"></div>

            <div><%= form.date_field :arrive, placeholder:"Arrivé", class:" form-control p-1" %></div>

            <div class="vr d-none d-md-block m-1"></div>
            <div class="dropdown-divider d-block d-md-none m-1"></div>
        
            <div><%= form.date_field :depart, placeholder:"Départ", class:" form-control p-1" %></div>

            <div class="vr d-none d-md-block m-1"></div>
            <div class="dropdown-divider d-block d-md-none m-1"></div>

            <div><%= form.number_field :voyageur, placeholder:"Voyageurs", class:" form-control p-1" %></div>


            <%= form.text_field :latitude, type:"hidden", data: { places_target: "latitude"} %>

            <%= form.text_field :longitude, type:"hidden", data: { places_target: "longitude"} %>

            <div class="vr d-none d-md-block m-1"></div>
            <div class="dropdown-divider d-block d-md-none m-1"></div>

            <div><%= form.submit "Recherche", class:" form-control p-1" %></div>

          </div>
          <% end %>
            
        </div>
      </div>
      
    </div>
  </div>
