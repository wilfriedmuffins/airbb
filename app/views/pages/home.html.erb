<div id="search">
    <%= form_with url: '/search', method: :get, local: true do |form| %>
      <%= form.text_field :city, placeholder:"City" %>

      <%= form.label :arrive %>
      <%= form.date_field :arrive, placeholder:"Arrivée" %>

      <%= form.label :depart %>
      <%= form.date_field :depart, placeholder:"Départ" %>

      <%= form.label :voyageur %>
      <%= form.number_field :voyageur, placeholder:"Voyageur", in: 1..10, step: 1 %>

      <%= form.submit "Recherche" %>
  <% end %>
</div>



