<h1>Logement disponible pour réservation du <%= Date.parse(@arrive).try(:strftime, ("%e %B %Y")) %> jusqu'au <%= Date.parse(@depart).try(:strftime, ("%e %B %Y")) %></h1>

<div class="contaianer">
    <div class="row">
        <div id="block1" class="ccol-6" style="border: 1px solid red">
            <% @logements_disponible.each do |logement| %>
                    <div class="card " style="width: 18rem;">
                
                            <div class="card-header">
                                <%= logement.title %>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    
                                    <div class="col">
                                        <%= image_tag logement.images[0].url, class: "img-fluid" %>
                                    </div>

                                    <div class="col">
                                        <div class="row">
                                            <p class="card-text"><%= logement.price %>€/nuit</p>
                                            <p class="card-text">Nombre de voyagaueurs: <%= logement.voyageur %></p>
                                            <a class="card-link"><%= link_to "voir", page_path(logement, depart: @depart, arrive: @arrive, voyageur: @voyageur) %></a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                    </div>
                <% end %>
        </div>
                
        <div id="block2" class="col-6" style="border: 1px solid red; height:520px">
            <%= tag.div id: "map", data: { markers: @logements_disponible.to_json(methods: [:address]) }%> 
        </div>
        
    </div>
</div>


