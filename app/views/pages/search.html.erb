<h1>Logements disponibles</h1>
<div data-controller="places">
    

<table  >
    <thead>
        <tr>
            <th>Title </th>
            <th>Adresse</th>
            <th>City</th>
            <th>Depart</th>
            <th>Arriv√©e</th>
            </tr>
        </thead>
        <tbody >
        <div data-controller="places" data-places-lat-value="<%= @lat.inspect %>"> </div> 
            <% @log.each do |logement| %>
                    <tr >
                        <td><%= logement.title %></td>
                        <td><%= logement.adresse %></td>
                        <td><%= logement.city %></td>
                        <td><%= logement.start_date_of_availability.try(:strftime, ("%e %B %Y")) %></td> 
                        <td><%= logement.end_date_of_availability.try(:strftime, ("%e %B %Y")) %></td>
                    </tr>
            <% end %> 
        </tbody>
</table>


<div data-action="google-maps-callback@window->places#initMap">
    <div data-places-target="map" style="height:400px; width:800px" ></div>
</div>

</div>